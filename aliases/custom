# Git Alises

getBranchName() {
  set -e
  local branch=$1
  if [ -z $branch ]; then
    branch=$(git branch --show-current)
  fi
  echo $branch
}

gpo() {
  git push origin $(getBranchName)
}

gpu() {
  git pull origin $(getBranchName)
}

alias gaa="git add -A"
alias gc="git commit"