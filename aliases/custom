alias zrc="source ~/.zshrc"
_ls() {
  exa -la $@ || /bin/ls -lah $@
}
alias ls=_ls $@
alias sl=ls
cat() {
  bat $1 || $(whereis cat) $1
}
alias glc="git log --oneline | wc -l"

alias cp="cp -v"
alias mv="mv -v"
alias rm="rm -v"

alias vsc='code . ; exit'

alias pof='systemctl poweroff -i'
alias rbt='systemctl reboot -i'

