alias zrc="source ~/.zshrc"

# Some Common Aliases

cat() {
  bat "$1" || comamnd "$1"
}

_ls() {
  eza -lah --icons=always "$@" || /bin/ls -lah "$@"
}

alias ls=_ls "$@"
alias sl=ls
alias cp="cp -v"
alias mv="mv -v"
alias rm="rm -v"
alias vim='nvim'
alias grep="rg"
alias ip="ipconfig getifaddr en0"
alias cls=clear

# Mpv
alias mpv="mpv --fs"

# JS Aliases

alias ni='npm i'
alias nd='npm i -D'
alias nig='npm i -G'
alias nii="npm init -y"

alias ya='yarn add'
alias yd='yarn add -D'
alias yg='yarn global add'
alias yii='yarn init -y'

alias pi'pnpm i'
