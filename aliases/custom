alias zrc="source ~/.zshrc"

# Some Common Aliases

cat() {
  bat "$1" || comamnd "$1"
}

_ls() {
  exa -la $@ || /bin/ls -lah $@
}

alias ls=_ls $@
alias sl=ls
alias cp="cp -v"
alias mv="mv -v"
alias rm="rm -v"
alias vim='lvim'
alias grep="rg"
alias ip="ipconfig getifaddr en0"
alias cls=clear

# Mpv
alias mpv="mpv --fs"

alias vsc='code . ; exit'

# JS Aliases

alias ni='npm i'
alias nd='npm i -D'
alias nig='npm i -G'
alias nii="npm init -y"

alias ya='yarn add'
alias yd='yarn add -D'
alias yg='yarn global add'
alias yii='yarn init -y'

alias pi'pnpm i'
alias pd='pnpm i -D'
alias ppg='pnpm i -g'
alias pii='pnpm init'

alias vite='yarn create vite'

# Git Alises

getBranchName() {
  set -e
  local branch=$1
  if [ -z "$branch" ]; then
    branch=$(git branch --show-current)
  fi
  echo "$branch"
}

gpo() {
  git push origin $(getBranchName)
}

gpu() {
  git pull origin $(getBranchName)
}

alias gaa="git add -A"
alias gc="git commit"

alias glc="git log --oneline | wc -l"

alias python=python3
alias python2=python3